<h1><%- title %></h1>

<%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form
  action="/inv/add-inventory"
  method="post"
  id="addInventoryForm"
  novalidate
>
  <label>Classification:</label>
  <%- classificationList %>

  <label
    >Make:
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      required
      minlength="2"
      maxlength="30"
      pattern="[A-Za-z0-9]+"
      value="<%- locals.inv_make %>"
    />
  </label>

  <label>
    Model:
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      required
      minlength="1"
      maxlength="30"
      pattern="[A-Za-z0-9]+"
      value="<%- locals.inv_model %>"
    />
  </label>

  <label
    >Year:
    <input
      type="number"
      min="1900"
      max="2099"
      id="inv_year"
      name="inv_year"
      required
      value="<%- locals.inv_year %>"
    />
  </label>

  <label>
    Description:
    <textarea
      id="inv_description"
      name="inv_description"
      required
      minlength="10"
      maxlength="500"
    >
<%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea
    >
  </label>

  <label
    >Image Path:
    <input
      type="text"
      id="inv_image"
      name="inv_image"
      required
      pattern=".*\.(jpg|jpeg|png|gif)$"
      value="<%- locals.inv_image %>"
    />
  </label>
  <label
    >Thumbnail Path:
    <input
      type="text"
      id="inv_thumbnail"
      name="inv_thumbnail"
      required
      pattern=".*\.(jpg|jpeg|png|gif)$"
      value="<%- locals.inv_thumbnail %>"
    />
  </label>
  <label
    >Price:
    <input
      type="number"
      id="inv_price"
      name="inv_price"
      min="0"
      step="0.01"
      required
      value="<%- locals.inv_price %>"
    />
  </label>
  <label
    >Miles
    <input
      type="number"
      id="inv_miles"
      name="inv_miles"
      min="0"
      required
      value="<%- locals.inv_miles %>"
    />
  </label>
  <label
    >Color:
    <input
      type="text"
      id="inv_color"
      name="inv_color"
      required
      pattern="[A-Za-z ]+"
      value="<%- locals.inv_color %>"
    />
  </label>
  <button type="submit" class="button">Add Inventory</button>
</form>

<script src="/js/validate-add"></script>
