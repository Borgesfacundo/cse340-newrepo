<h1><%- title %></h1>

<%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form action="/inv/update" method="post" id="updateForm" novalidate>
  <label>Classification:</label>
  <%- classificationList %>

  <label
    >Make:
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      required
      value="<%- inv_make %>"
    />
  </label>

  <label
    >Model:
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      required
      value="<%- inv_model %>"
    />
  </label>

  <label
    >Year:
    <input
      type="number"
      min="1900"
      max="2099"
      id="inv_year"
      name="inv_year"
      required
      value="<%- inv_year %>"
    />
  </label>

  <label>
    Description:
    <textarea id="inv_description" name="inv_description" required>
<%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea
    >
  </label>

  <label
    >Image Path:
    <input
      type="text"
      id="inv_image"
      name="inv_image"
      required
      value="<%- inv_image %>"
    />
  </label>
  <label
    >Thumbnail Path:
    <input
      type="text"
      id="inv_thumbnail"
      name="inv_thumbnail"
      required
      value="<%- inv_thumbnail %>"
    />
  </label>
  <label
    >Price:
    <input
      type="number"
      id="inv_price"
      name="inv_price"
      min="0"
      step="0.01"
      required
      value="<%- inv_price %>"
    />
  </label>
  <label
    >Miles
    <input
      type="number"
      id="inv_miles"
      name="inv_miles"
      min="0"
      required
      value="<%- inv_miles %>"
    />
  </label>
  <label
    >Color:
    <input
      type="text"
      id="inv_color"
      name="inv_color"
      required
      value="<%- inv_color %>"
    />
  </label>
  <button type="submit" class="Submit" disabled>Update Vehicle</button>
  <input type="hidden" name="inv_id" value="<%- inv_id %>" />
</form>

<script src="../../js/inv-update.js"></script>
