<title><%= title %></title>
<h1><%= title %></h1>
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %> <%- messages() %>

<form id="loginInfo" action="/account/login" method="post">
  <fieldset>
    <label
      >Email:
      <input
        type="email"
        id="email"
        name="account_email"
        required
        value="<%- locals.account_email %>"
    /></label>
    <label
      >Password:
      <input
        type="password"
        id="pwd"
        name="account_password"
        minlength="12"
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        title="Password must be at least 12 characters long, contain at least one uppercase letter, one digit, and one special character."
        required
    /></label>
    <div id="pswdHint">
      <b
        >Password must be at least 12 characters long, contain at least one
        uppercase letter, one digit, and one special character.</b
      >
    </div>
    <input type="submit" value="Login" />
  </fieldset>
  <span>No account? <a href="/account/register">Sign-up</a></span>
</form>
